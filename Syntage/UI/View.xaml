<UserControl x:Class="Syntage.UI.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:Syntage.UI"
             mc:Ignorable="d"
             Width="737"
             Height="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ViewResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.FontFamily>../Resources/#Orbitron</UserControl.FontFamily>
    <UserControl.BorderThickness>1</UserControl.BorderThickness>
    <UserControl.BorderBrush>Black</UserControl.BorderBrush>
    <UserControl.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <ui:Piano Grid.Row="1"
                      VerticalAlignment="Bottom"></ui:Piano>
            <Grid Grid.Row="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="#FFF7F7F7" />
                        <GradientStop Color="#FFBEFFC4"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Grid.Background>
                <Label Content="Syntage"
                       FontSize="24"
                       Margin="60,0,553,270"
                       Height="40"
                       VerticalAlignment="Bottom" />
                <Label x:Name="LogLabel"
                       Content="Log"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       FontSize="10" />
                <ui:Oscilloscope x:Name="Oscilloscope"
                                 Margin="509,10,10,0"
                                 Height="136"
                                 VerticalAlignment="Top"></ui:Oscilloscope>
                <ui:Knob x:Name="CMix"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="596,225,0,0"
                         KnobBackColor="Gold" />
                <ui:Knob x:Name="DTrshd"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="656,225,0,0" />
                <ui:Knob x:Name="NVol"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="536,225,0,0"
                         KnobBackColor="LightSteelBlue" />
                <ui:Slider x:Name="MVol"
                           HorizontalAlignment="Left"
                           Margin="466,26,0,0"
                           VerticalAlignment="Top"
                           SliderBackColor="#FF722D" />
                <ui:Switch x:Name="CPwr"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           SwitchColor="OrangeRed" />
                <ui:Knob x:Name="OStp"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="549,150,0,-2"
                         KnobBackColor="Violet" />
                <ui:Switch x:Name="OPwr"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           SwitchColor="ForestGreen"
                           Margin="509,157,0,0" />
                <Grid HorizontalAlignment="Left"
                      Height="235"
                      Margin="10,60,0,0"
                      VerticalAlignment="Top"
                      Width="241">
                    <Label FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,-5,0,0">OSCILLATOR A</Label>
                    <Rectangle Stroke="Black"
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0,0,55,44"></Rectangle>
                    <ui:Knob x:Name="AVol"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             KnobBackColor="{StaticResource PaletteColor1}"
                             Margin="-5,8,0,0" />
                    <ui:Knob x:Name="AOsc"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             KnobBackColor="{StaticResource PaletteColor1}"
                             Margin="40,8,0,0" />
                    <ui:Knob x:Name="AFine"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             KnobBackColor="{StaticResource PaletteColor1}"
                             Margin="85,8,0,0" />
                    <ui:Knob x:Name="APan"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             KnobBackColor="{StaticResource PaletteColor1}"
                             Margin="130,8,0,0" />
                    <ui:Slider x:Name="AEAtk"
                               HorizontalAlignment="Left"
                               Margin="19,71,0,0"
                               VerticalAlignment="Top"
                               SliderBackColor="#FF722D" />
                    <ui:Slider x:Name="AEDec"
                               HorizontalAlignment="Left"
                               Margin="49,71,0,0"
                               VerticalAlignment="Top"
                               SliderBackColor="#FF722D" />
                    <ui:Slider x:Name="AEStn"
                               HorizontalAlignment="Left"
                               Margin="79,71,0,0"
                               VerticalAlignment="Top"
                               SliderBackColor="#FF722D" />
                    <ui:Slider x:Name="AERel"
                               HorizontalAlignment="Left"
                               Margin="109,71,0,0"
                               VerticalAlignment="Top"
                               SliderBackColor="#FF722D" />
                </Grid>
                <Grid HorizontalAlignment="Left"
                      Height="86"
                      Margin="289,16,0,0"
                      VerticalAlignment="Top"
                      Width="177">
                    <Label FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,-5,0,0">OSCILLATOR B</Label>
                    <Rectangle Stroke="Black"
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0,0,-3,0"></Rectangle>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <ui:Knob x:Name="BVol"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 KnobBackColor="{StaticResource PaletteColor2}" />
                        <ui:Knob x:Name="BOsc"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 KnobBackColor="{StaticResource PaletteColor2}" />
                        <ui:Knob x:Name="BPan"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 KnobBackColor="{StaticResource PaletteColor2}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </UserControl.Content>
</UserControl>
