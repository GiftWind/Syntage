<UserControl x:Class="Syntage.UI.Group"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syntage.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ViewResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.FontFamily>../Resources/#Visitor TT1 BRK</UserControl.FontFamily>
    <Grid>
        <Rectangle StrokeThickness="1"
                   Stroke="Black" RadiusX="10" RadiusY="10" />
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="10"
                   Margin="5"
                   Height="15">GROUP</TextBlock>
        <ContentControl />
    </Grid>
</UserControl>
